## Redis Production ##
  redis_stg_approval:
    name: Start Redis Staging 
    environment: redis_stg
    runs-on: ubuntu-latest
    steps:
      - name: Request Approval
        run: echo "Approval required for Staging Start"
      
  redis_stg_start_email_G1_LA:
    name: Staging Redis g Start Email G1 LA
    needs: redis_stg_approval
    runs-on: Linux
    steps:
      - name: Send Staging Start Email G1 LA
        run: echo "Sending Staging Start Email G1 LA"
      
  redis_stg_updated_G1_LA:
